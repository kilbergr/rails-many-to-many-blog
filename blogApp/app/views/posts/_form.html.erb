<%= form_for [@author,@post] do |f| %>
		<%= f.label "Title" %>
		<%= f.text_field :name, autofocus: true %><br/>
    <%= f.label "Content" %>
    <%= f.text_field :content%><br />
    <%= f.label "Author" %>
		<%= f.text_field :author %><br/>

	    <%= f.collection_check_boxes(:tag_ids, @tags, :id, :name) do |b| %>
	        <span>
	            <%= b.check_box %>
	            <%= b.label %>
	        </span>
	    <% end %>

	    <%= f.submit instance, class: "btn btn-info"%>

<% end %>

